root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true
tab_width = 2

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[{*.cjs,*.js,*.mjs}]
indent_size = 2
tab_width = 2

[{*.json,.babelrc,.eslintrc,.stylelintrc}]
indent_size = 2
tab_width = 2

[*.pug]
indent_size = 2
tab_width = 2
